<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <!-- Application theme. -->

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/rang_dark</item>
        <item name="tabSelectedTextColor">@color/White</item>
        <item name="tabTextColor">@color/White</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
    </style>
    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
<style name="GridLayout">

    <item name="android:gravity">center</item>
    <item name="android:horizontalSpacing">2dp</item>
    <item name="android:numColumns">3</item>
    <item name="android:stretchMode">columnWidth</item>
    <item name="android:verticalSpacing">2dp</item>
    <item name="android:background">@color/rang_dark</item>
    <item name="android:paddingTop">2dp</item>
</style>


</resources>
